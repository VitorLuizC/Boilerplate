/**
 * Centralize
 * -------------------------------------------------------------------
 * Centralize component verical, horizontal or both.
 */
centralize(type = silly, vertex = both) { // TODO: Add vertex
  if (type == silly) {
    display: block;
    margin-right: auto;
    margin-left: auto;
  } else if (type == absolute) {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
}
